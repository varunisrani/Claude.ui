# =============================================================================
# Claudex Environment Configuration
# Copy this file to .env and customize as needed
# =============================================================================

# -----------------------------------------------------------------------------
# Core Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=development
SECRET_KEY=your_secret_key_at_least_32_characters_long

# Base URLs (required for E2B sandbox permission callbacks in local dev)
BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/postgres

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Service Ports
# -----------------------------------------------------------------------------
BACKEND_PORT=8080
FRONTEND_PORT=3000

# -----------------------------------------------------------------------------
# Celery Workers
# -----------------------------------------------------------------------------
CELERY_CONCURRENCY=25
CELERY_WORKER_REPLICAS=8

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=DEBUG

# -----------------------------------------------------------------------------
# Admin Credentials (seeded on first run)
# -----------------------------------------------------------------------------
ADMIN_EMAIL=admin@example.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# -----------------------------------------------------------------------------
# CORS & Security
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS=http://localhost:3000,https://claudex.pro
TRUSTED_PROXY_HOSTS=127.0.0.1

# Security Headers
ENABLE_SECURITY_HEADERS=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=false
FRAME_OPTIONS=DENY

# -----------------------------------------------------------------------------
# Email (Optional - for email verification)
# -----------------------------------------------------------------------------
REQUIRE_EMAIL_VERIFICATION=false
MAIL_USERNAME=apikey
MAIL_PASSWORD=
MAIL_FROM=noreply@claudex.pro
MAIL_FROM_NAME=Claudex
MAIL_PORT=587
MAIL_SERVER=smtp.sendgrid.net
BLOCK_DISPOSABLE_EMAILS=true

# -----------------------------------------------------------------------------
# E2B Sandbox (Optional - configured per-user in Settings UI)
# -----------------------------------------------------------------------------
# E2B_API_KEY=your_e2b_api_key
E2B_TEMPLATE_ID=hg02z8aexvw928qvuq87

# -----------------------------------------------------------------------------
# AI Provider Keys (Optional - configured per-user in Settings UI)
# These can also be set via the Settings UI per user
# -----------------------------------------------------------------------------
# CLAUDE_CODE_OAUTH_TOKEN=your_claude_oauth_token
# ZAI_API_KEY=your_zai_api_key
# OPENROUTER_API_KEY=your_openrouter_api_key

# -----------------------------------------------------------------------------
# Context & Limits
# -----------------------------------------------------------------------------
CONTEXT_WINDOW_TOKENS=200000
MAX_UPLOAD_SIZE=5242880
